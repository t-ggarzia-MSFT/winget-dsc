<Page
    x:Class="dscui.Views.ConfigurationFlow.SelectFilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:dscui.Views.ConfigurationFlow"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <converters:EmptyStringToObjectConverter x:Key="ShowErrorMessage" EmptyValue="False" NotEmptyValue="True" />
    </Page.Resources>

    <StackPanel VerticalAlignment="Center" Width="400" Spacing="8">
        <Grid>
            <Rectangle StrokeDashArray="4,2"
                       Stroke="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                       RadiusX="4"
                       RadiusY="4"
                       StrokeThickness="2"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Foreground="{ThemeResource TextFillColorSecondaryBrush}" Style="{ThemeResource SubtitleTextBlockStyle}" Padding="20">Import configuration file</TextBlock>
                <FontIcon Foreground="{ThemeResource TextFillColorSecondaryBrush}" Glyph="&#xE8FF;" FontSize="60" />
            <Button HorizontalAlignment="Center"
                    Margin="24"
                    MinWidth="120"
                    Click="Browse_Click">Browse</Button>
            </StackPanel>
        </Grid>

        <StackPanel Spacing="16">
            <InfoBar  IsOpen="{x:Bind ViewModel.SelectFileResult.Message, Converter={StaticResource ShowErrorMessage}, Mode=OneWay}"
                      Severity="Error"
                      Message="{x:Bind ViewModel.SelectFileResult.Message, Mode=OneWay}" />
            <controls:SwitchPresenter Value="{x:Bind ViewModel.IsFileSelected, Mode=OneWay}" TargetType="x:Boolean">
                <controls:Case Value="True">
                    <TextBlock HorizontalAlignment="Center" Text="{x:Bind ViewModel.SelectFileResult.FilePath, Mode=OneWay}" />
                </controls:Case>
                <controls:Case Value="False">
                    <TextBlock HorizontalAlignment="Center" Text="Select a configuration file" />
                </controls:Case>
            </controls:SwitchPresenter>
            <Button HorizontalAlignment="Center"
                    Style="{ThemeResource AccentButtonStyle}"
                    MinWidth="120"
                    Command="{x:Bind ViewModel.PreviewCommand, Mode=OneWay}">Preview</Button>
        </StackPanel>
    </StackPanel>
</Page>
